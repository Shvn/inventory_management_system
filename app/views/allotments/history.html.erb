<% content_for :title, "Listing Allotment's History" %>

<h1><%= yield(:title) %></h1>

<%= render 'shared/flash' %>

<table class="table table-rsponsive table-striped" id="list-table">
  <tr>
    <th>Item</th>
    <th>Person</th>
    <th>Action</th>
    <th>Time</th>
  </tr>

  <% if @allotment_histories.present? %>
    <% @allotment_histories.each do |history| %>
      <tr>
        <td><%= history.allotment.item.name %></td>
        <td><%= history.allotment.person.name %></td>
        <td><%= history.action %></td>
        <td><%= history.created_at %></td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <td colspan="5">No allotment's history found!</td>
    </tr>
  <% end %>
</table>
<%= render 'shared/prev_n_home_links' %>
