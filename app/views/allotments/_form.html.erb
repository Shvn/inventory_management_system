<%= form_for @allotment do |f| %>

  <% if @allotment.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@allotment.errors.count, "error") %> prohibited
        this allotment from being saved:
      </h2>
      <ul>
        <% @allotment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p class="input-group">
    <%= f.label :item_id %><br>
    <%= f.collection_select :item_id, Item.all, :id, :name, { include_blank: "Select item" }, { class: "form-control" } %>
  </p>

  <p class="input-group">
    <%= f.label :person_id %><br>
    <%= f.collection_select :person_id, Person.all, :id, :name, { include_blank: "Select person" }, { class: "form-control" } %>
  </p>

  <p>
    <%= f.submit "Allocate", class: "btn btn-primary" %>
  </p>

<% end %>
