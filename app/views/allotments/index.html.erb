<% content_for :title, "Listing Allotments" %>

<h1><%= yield(:title) %></h1>

<%= link_to 'New Allotment', new_allotment_path, class: "btn btn-success" if is_admin %>

<%= render 'shared/flash' %>

<table class="table table-rsponsive table-striped" id="list-table">
  <tr>
    <th>Items</th>
    <th>People</th>
    <th>Status</th>
    <th>Time</th>
    <th colspan="2"></th>
  </tr>

  <% if @allotments.present? %>
    <% @allotments.each do |allotment| %>
      <tr>
        <td><%= allotment.item.name %></td>
        <td><%= allotment.user.name %></td>
        <td><%= allotment.status %></td>
        <td><%= allotment.created_at %></td>
        <td><%= link_to 'View', allotment_path(allotment) %></td>
        <td><%= link_to 'History', history_allotment_path(allotment) %></td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <td colspan="5">No allotments found!</td>
    </tr>
  <% end %>
</table>
<%= render 'shared/prev_n_home_links' %>
