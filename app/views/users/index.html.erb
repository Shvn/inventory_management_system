<% content_for :title, "Listing Users" %>

<h1><%= yield(:title) %></h1>

<%= render 'shared/flash' %>

<table class="table table-rsponsive table-striped" id="list-table">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Mobile</th>
    <th>Admin</th>
  </tr>

  <% if @users.present? %>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.mobile %></td>
        <td><%= user.get_admin_text %></td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <td colspan="4">No user found!</td>
    </tr>
  <% end %>
</table>
<%= render 'shared/prev_n_home_links' %>
